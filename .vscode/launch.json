{
    "version": "0.2.0",
    "tasks": [
        {
          "type": "pdc",
          "problemMatcher": ["$pdc-lua", "$pdc-external"],
          "label": "Playdate: Build"
        },
        {
          "type": "playdate-simulator",
          "problemMatcher": ["$pdc-external"],
          "label": "Playdate: Run"
        },
        {
          "label": "Playdate: Build and Run",
          "dependsOn": ["Playdate: Build", "Playdate: Run"],
          "dependsOrder": "sequence",
          "problemMatcher": [],
          "group": {
            "kind": "build",
            "isDefault": true
          }
        }
      ],
    "configurations": [
        {
            "type": "playdate",
            "request": "launch",
            "name": "Build and Run (Simulator)",
            "preLaunchTask": "Build and Run (Simulator)"
        },
        {
          "type": "playdate",
          "request": "launch",
          "name": "Playdate: Debug",
          "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
